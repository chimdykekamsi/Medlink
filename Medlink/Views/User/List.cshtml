
@model IEnumerable<UserModel>;
@{
    ViewData["Title"] = "List";
}
<style>
    .input-group{
        background-color:transparent;
        outline:none;
        border:1px solid rgb(30, 148, 162);
        border-radius:10px;
    }
    .form-control:focus{
         background-color:transparent;
        outline:none;
        border:none;
    }
    .form-control{
         background-color:transparent;
        outline:none;
        border:none;
        border-left:1px solid 1px solid rgb(30, 148, 162);
    }
    .card{
        background-color:rgba(255,255,255,.7);
    }
    
</style>
<div class="row">
    <h5 class="col-lg-6">Doctors</h5>
    <div class="col-lg-6">
        <div class="input-group" >
            <span class="input-group-propend fas fa-search text-center p-2 rounded"></span>
            <input class="form-control" id="searchid" placeholder="Type to search"/>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
       @foreach(var obj in Model){
            <div class="col-md-3 mb-4 card-container">
                <!-- Content for the first column -->
                <div class="card">
                    <div class="card-body">
                        <div class="row p-1">
                            <div class="col-lg-12 col-3 text-lg-center">
                                <img src="@Url.Content("~/uploads/" + obj.profile)" class="rounded-circle img-fluid img-thumbnail" alt="Circular Image">
                            </div>
                            <div class="col-lg-12 col-7 m-2">
                                <h5>@obj.fullname</h5>
                                <i class="fw-bolder">@obj.username</i>
                                <h6>@obj.specialty</h6>
                            </div>
                            <a class="btn text-go col-12" style="display:flex;justify-content:right" asp-controller="User" asp-action="Doctor" asp-route-id="@obj.user_id"><i class="fas fa-ellipsis-h"></i></a>
                        </div>
                    </div>
                </div>
            </div>
       }
    </div>
    <div id="noResults" style="display: none;" class="text-go col-12 text-center">
        <img src="~/assets/404.svg" alt="Logo" class="img-fluid svg" width="350" />
        <h5>No doctors found. Please refine your search.</h5>
    </div>
</div>

